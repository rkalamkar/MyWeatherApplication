<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upperMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground">

    <TextView
        android:id="@+id/textViewTempreture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_56"
        android:fontFamily="sans-serif-black"
        android:text="30"
        android:textColor="@color/bottomSheet_TextColor"
        android:textSize="@dimen/textSize_96"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTempreture"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_62"
        android:text="Mumbai"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/city_textColor"
        android:textSize="@dimen/textSize_36"
        android:visibility="gone" />

</RelativeLayout>